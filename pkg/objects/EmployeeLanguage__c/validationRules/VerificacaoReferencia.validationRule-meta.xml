<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VerificacaoReferencia</fullName>
    <active>true</active>
    <description>Regra de validação para o preenchimento obrigatório do campo outras referencias.</description>
    <errorConditionFormula>AND(ISPICKVAL(Reference__c, &quot;Outras&quot;),
ISBLANK(OtherReference__c))</errorConditionFormula>
    <errorDisplayField>OtherReference__c</errorDisplayField>
    <errorMessage>Preenchimento obrigatório.</errorMessage>
</ValidationRule>
